<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - moeKino</title>

    @Styles.Render("~/Content/css")
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/stylesheet.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-ui.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color:#100000;background-image:url(../../Content/curtain.png);background-repeat:repeat-y;background-size: 100% 100%;" class="pt-0">
    <div class="navbar navbar-inverse pt-0" style="background-color:transparent">
        <div class="row pl-1 pr-1">
            <div class="navbar-header w-100 col-1 pt-2">
                <a class="navbar-brand" href="~/Home/Index"><img src="~/Content/moeKino.png" class="float-left rounded embed-responsive" style="width:145%"></a>
            </div>

            <nav class="navbar navbar-expand-lg col-10" style="background-image:url(../../Content/curtain-top4.png);background-repeat:no-repeat; background-size: 93.5% 100%; height: 120px; margin-left: 3.3%;">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav font-weight-bold" style="margin-left:15%;margin-top:-6%">
                        <li class="nav-item active">
                            @Html.ActionLink("ABOUT", "About", "Home")
                        </li>
                        <li class="nav-item pl-3">
                            @Html.ActionLink("MOVIES", "Index", new { controller = "Films" }, null)
                        </li>
                        <li class="nav-item pl-3">
                            @Html.ActionLink("COMING SOON", "Soon", new { controller = "Films" }, null)
                        </li>
                        <li class="nav-item pl-3">
                            @Html.ActionLink("BEST MOVIES", "BestMovies", new { controller = "Films" }, null)
                        </li>
                        <li class="nav-item pl-3">
                            @Html.ActionLink("ARCHIVED MOVIES", "ArchivedMovies", new { controller = "Films" }, null)
                        </li>
                        @if (Request.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                            <li class="nav-item pl-3">@Html.ActionLink("CLIENTS", "Index", new { controller = "Clients" }, null)</li>
                             }
                            if (User.IsInRole("User"))
                            {
                            <li class="nav-item pl-3">@Html.ActionLink("MY TICKETS", "Tickets", new { controller = "Clients" }, null)</li>
                            }
                         }
                        <li class="nav-item pl-3">
                            @Html.ActionLink("CONTACT", "Contact", "Home")
                        </li>
                    </ul>

                </div>
            </nav>

            @Html.Partial("_LoginPartial")
        </div>
    </div>
    @RenderBody()


    <footer class="text-right" style="margin-right:5%">

        <div>
            <a href="https://www.facebook.com/" target="_blank"><img src="~/Content/footer-facebook.png" width="35px;" /></a>
            <a href="https://www.instagram.com/" target="_blank"><img src="~/Content/instagram.png" width="35px;" /></a>
            <a href="https://accounts.google.com/ServiceLogin/identifier?service=mail&passive=true&rm=false&continue=https%3A%2F%2Fmail.google.com%2Fmail%2F&ss=1&scc=1&ltmpl=googlemail&emr=1&osid=1&flowName=GlifWebSignIn&flowEntry=AddSession" target="_blank"><img src="~/Content/gmail.png" width="35px;" /></a>
            <a href="https://www.youtube.com/" target="_blank"><img src="~/Content/youtube.png" width="35px;" /></a>
            <a href="https://twitter.com/?lang=en" target="_blank"><img src="~/Content/twiter.png" width="35px;" /></a>
            <a href="https://www.pinterest.com/" target="_blank"><img src="~/Content/pinterest.png" width="35px;" /></a>
        </div>
    </footer>   
</body>
</html >
